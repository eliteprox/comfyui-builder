    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug ComfyStream",
            "type": "debugpy",
            "request": "launch",
            "cwd": "/comfystream",
            "program": "server/app.py",
            "args": [
                "--workspace", "../ComfyUI",
                "--media-ports=5678",
                "--host=0.0.0.0",
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}

